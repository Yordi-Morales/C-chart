@{
    ViewData["Title"] = "Home Page";
}
@model List<RolModel>


<div>
    <h1>Lista de Roles[@ViewData["cadena1"]]</h1>
    <a asp-action="AgregarRolView" class="btn btn-success text-white mb-3">Crear Rol</a>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rol in Model)
            {
                <tr>
                    <td>@rol.Id_Rol</td>
                    <td>@rol.Nombre</td>
                    <td>@rol.Descripcion</td>
                    <td>
                        <a asp-action="Eliminar" asp-route-id="@rol.Id_Rol" class="btn btn-danger btn-sm">Eliminar</a>
                        <a asp-action="ModificarView" asp-route-Id_Rol="@rol.Id_Rol" asp-route-Nombre="@rol.Nombre" asp-route-Descripcion="@rol.Descripcion" asp-route-Estado="@rol.Estado" class="btn btn-primary btn-sm">Modificar</a>
                        <a asp-action="DetalleView" asp-route-Id_Rol="@rol.Id_Rol" asp-route-Nombre="@rol.Nombre" asp-route-Descripcion="@rol.Descripcion" asp-route-Estado="@rol.Estado" class="btn btn-warning btn-sm">Detalles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>