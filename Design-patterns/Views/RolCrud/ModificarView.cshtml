@model RolModel


<h2>Modificar Usuario[@ViewData["cadena1"]]</h2>
<form method="post" asp-action="Modificar">
    <div class="form-group">
        <label for="nombreUsuario">Nombre de Rol:</label>
        <input type="text" class="form-control" id="nombre" name="Nombre" value="@Model.Nombre">
    </div>
    <div class="form-group">
        <label for="nombreCompleto">Descripcion:</label>
        <input type="text" class="form-control" id="descripcion" name="Descripcion" value="@Model.Descripcion">
    </div>
    <div class="form-group">
        <label for="estado">Estado:</label>
        <select class="form-control" id="estado" name="Estado">
            @{
                if (Model.Estado == "Activo")
                {
                    <option value="Activo" selected>Activo - @Model.Estado</option>
                    <option value="Inactivo">Inactivo</option>
                }
                else
                {
                    <option value="Activo">Activo</option>
                    <option value="Inactivo" selected>Inactivo - @Model.Estado</option>
                }
            }
        </select>
    </div>
    <input type="hidden" name="Id_Rol" value="@Model.Id_Rol">
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>

</form>


